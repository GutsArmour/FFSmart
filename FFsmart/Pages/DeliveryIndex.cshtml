@page
@model FFsmart.Pages.DeliveryIndexModel
@{
    ViewData["Title"] = "Delivery";
}

<section class="container-fluid p-5" style="height: 90vh;">
    <div class="row h-100 justify-content-center">
        <div class="col-md-6 text-center">
            <p class="h1">Select Order.</p>
            <hr />
            @foreach(var order in Model.SubmittedOrders)
            {
                <div class="d-flex bg-light rounded justify-content-between align-items-center py-3 px-5 mb-3">
                    <p class="dark-txt fw-bold m-0">Order ID: @order.Id</p>
                    <a class="btn btn-sm secondary-txt" asp-page="/OrderAccess" asp-route-id="@order.Id"><i class="fa-solid fa-chevron-right"></i></a>
                </div>
            }
        </div>
    </div>
</section>